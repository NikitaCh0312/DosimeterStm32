<UserControl x:Class="Dosimeter.UserInteraction.Views.ConfigurationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Dosimeter.UserInteraction.Views"
             xmlns:mvvm="http://prismlibrary.com/"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:converters="clr-namespace:Dosimeter.UserInteraction.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <mvvm:InvokeCommandAction Command="{Binding ViewLoadCommand}"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BoolToBoolInvertedConverter x:Key="BoolToBoolInvertedConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <Style x:Key="StyleTextBlock" TargetType="TextBlock">
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsConfigurationLoaded, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Сетевые настройки" Grid.Column="0" Grid.Row="0" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" VerticalAlignment="Top" Text="{Binding Ip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{x:Null}" Foreground="White" Margin="10" FontSize="20"
                             materialDesign:HintAssist.Hint="IP адрес" materialDesign:HintAssist.Foreground="White" 
                             Style="{DynamicResource  MaterialDesignFloatingHintTextBox}"/>
                    <TextBox Grid.Row="1" VerticalAlignment="Top" Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Background="{x:Null}" Foreground="White" Margin="10" FontSize="20"
                             materialDesign:HintAssist.Hint="Порт" materialDesign:HintAssist.Foreground="White" 
                             Style="{DynamicResource  MaterialDesignFloatingHintTextBox}"/>
                    <TextBox Grid.Row="2" VerticalAlignment="Top" Text="{Binding Mask, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{x:Null}" Foreground="White" Margin="10" FontSize="20"
                             materialDesign:HintAssist.Hint="Маска сети" materialDesign:HintAssist.Foreground="White" 
                             Style="{DynamicResource  MaterialDesignFloatingHintTextBox}"/>
                </Grid>
            </GroupBox>
            
            <GroupBox Header="Настройка даты-времени" Grid.Column="1" Grid.Row="0" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Calendar Grid.Row="0" FirstDayOfWeek="Monday" SelectedDate="{Binding Date}">
                        <Calendar.BlackoutDates>
                            <CalendarDateRange Start="10/5/2013" End="10/8/2013"></CalendarDateRange>
                        </Calendar.BlackoutDates>
                    </Calendar>
                    <materialDesign:TimePicker Grid.Row="1" Foreground="White" FontSize="20" SelectedTime="{Binding Time}"/>  
                </Grid>
            </GroupBox>

            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Height="50" Content="Применить конфигурацию" HorizontalAlignment="Stretch"
                    Command="{Binding SetConfigurationCommand}">
            </Button>
        </Grid>
        
        <mah:ProgressRing IsActive="{Binding IsConfigurationLoaded, Converter={StaticResource BoolToBoolInvertedConverter}}"
                          Foreground="White" Width="100" Height="100"/>
    </Grid>
    

</UserControl>
