<UserControl x:Class="Dosimeter.UserInteraction.Views.DosingTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="true"
             xmlns:local="clr-namespace:Dosimeter.UserInteraction.Views"
             xmlns:dviews="clr-namespace:Dosimeter.UserInteraction.Views.DosingTabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem Header="Dosing parameters">
                <dviews:ParametersTab/>
            </TabItem>
            <TabItem Header="Dosing modes configuration">
                <dviews:ModesConfigurationTab/>
            </TabItem>
            <TabItem Header="Calibration">
                <dviews:CalibrationTab/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
